<%- include('../parts/html-head') %>
<%- include('../parts/navbar') %>

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
                        <a class="page-link"
                           href="?<%- new URLSearchParams({...conditions, page: page - 1}) %>"
                        >
                            Previous
                        </a>
                    </li>
                    <% for (let i = 1; i <= totalPages; i++){ %>
                        <li class="page-item" <%= page === i ? 'active' : '' %>>
                            <a class="page-link"
                               href="?<%- new URLSearchParams({...conditions, page: i}) %>"
                            >
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                    <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
                        <a class="page-link"
                           href="?<%- new URLSearchParams({...conditions, page: page + 1}) %>"
                        >
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col"><i class="fas fa-trash-alt"></i></th>
                    <th scope="col">id</th>
                    <th scope="col">account</th>
                    <th scope="col">pass</th>
                    <th scope="col">time</th>
                    <th scope="col"><i class="fas fa-edit"></i></th>
                </tr>
                </thead>
                <tbody>
                <% for(let i of rows){ %>
                    <tr>
                        <td>
                            <a href="/user/delete/<%= i.user_id %>" onclick="return confirm(
                                    '確定要刪除編號為 <%= i.user_id %>的資料嗎?'
                                    )">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                        <td><%= i.user_id %></td>
                        <td><%= i.user_account %></td>
                        <td><%= i.user_pass %></td>
                        <td><%= i.user_time %></td>
                        <td>
                            <a href="/user/edit/<%= i.user_id %>">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../parts/script') %>
<%- include('../parts/html-foot') %>
